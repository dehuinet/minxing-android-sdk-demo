<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

   <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/mx_title_bar_height"
        android:background="@drawable/mx_bg_topbar" >

        <ImageButton
            android:id="@+id/title_left_back_button"
            style="@style/mx_mm_title_button"
            android:src="@drawable/mx_btn_back"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/mx_white"
            android:textSize="@dimen/mx_max_textsize" />

    </RelativeLayout>
    
   <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:text="商机信息" />

</RelativeLayout>