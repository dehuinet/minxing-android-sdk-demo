<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dip"
    android:orientation="vertical" >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dip"
        android:textSize="@dimen/list_item_header_text_size"
        android:text="敏行项目集成示例界面"/>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/list_item_text_left"
            android:text="成员(可单聊):"/>
        <TextView 
            android:id="@+id/crm_contact_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff7894a3"
            android:text="刘春山"/>
         <LinearLayout 
            android:id="@+id/single_conversation"
            android:layout_width="35dip"
            android:layout_height="25dip"
            android:layout_marginLeft="20dip"
            android:gravity="center">
            <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_reply_small_down"/>
        </LinearLayout>
        
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/list_item_text_left"
            android:text="成员(可群聊):"/>
        <TextView 
            android:id="@+id/crm_contact_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:textColor="#ff7894a3"
            android:text="高鹏"/>
        <TextView 
            android:id="@+id/crm_contact_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff7894a3"
            android:text="马晨"/>
        <LinearLayout 
            android:id="@+id/muti_conversation"
            android:layout_width="35dip"
            android:layout_height="25dip"
            android:layout_marginLeft="20dip"
            android:gravity="center">
            <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_reply_small_down"/>
        </LinearLayout>
        
    </LinearLayout>
    <Button 
        android:id="@+id/demo_forward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dip"
            android:text="转发"/>

</LinearLayout>
